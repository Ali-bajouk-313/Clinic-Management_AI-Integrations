@model ClinicManagement.Models.Appointment

<div class="container mt-4 col-md-6">
    <h3 class="fw-bold">Doctor Notes</h3>
    <hr />

    <p><strong>Patient:</strong> @Model.Patient.Name</p>
    <p><strong>Date:</strong> @Model.Date.ToString("dd/MM/yyyy HH:mm")</p>

    <form asp-action="AddNotesDr" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label fw-bold">Doctor Notes</label>
            <textarea name="DoctorNotes" class="form-control" rows="4">@Model.DoctorNotes</textarea>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Upload Files:</label>
            <input type="file" name="files" multiple class="form-control" />
            <small class="text-muted">Allowed: JPG, PNG, PDF</small>
        </div>

        <button class="btn btn-success">Save</button>
    </form>
</div>
