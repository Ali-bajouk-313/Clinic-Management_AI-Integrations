@model IEnumerable<ClinicManagement.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<style>

    .title-appointments {
        font-size: 28px;
        font-weight: 700;
        color: #145ea1;
    }

    .appt-table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0px 4px 16px rgba(0,0,0,0.07);
    }

        .appt-table thead th {
            background: #0e406c !important;
            color: #fff;
            text-align: center;
            vertical-align: middle;
        }

        .appt-table tbody tr:hover {
            background-color: #eef5ff !important;
        }

    .badge {
        font-size: 0.85rem;
        padding: 6px 10px;
    }

    .btn-sm {
        border-radius: 6px !important;
    }

    .btn-outline-primary,
    .btn-outline-secondary,
    .btn-outline-warning,
    .btn-outline-danger,
    .btn-outline-success {
        border-width: 1px;
    }

    .payment-cell {
        text-align: center;
    }

    .fw-bold {
        font-weight: 600 !important;
    }

</style>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="title-appointments">📅 Appointments</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            + New Appointment
        </a>
    </div>

    @await Html.PartialAsync("_AppointmentFilter")

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle appt-table">
            <thead>
                <tr>
                    <th>Patient</th>
                    <th>Doctor</th>
                    <th>Date</th>
                    <th>Notes</th>
                    <th>Status</th>
                    <th>Modify schedule</th>
                    <th>Payments</th>
                    <th class="text-center" colspan="2" style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appt in Model)
                {
                    <tr>
                        <td><strong>@appt.Patient?.Name</strong></td>
                        <td>@appt.Doctor?.Email</td>
                        <td>@appt.Date.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@(string.IsNullOrEmpty(appt.Notes) ? "-" : appt.Notes)</td>

                        <td>
                            @if (appt.Status == AppointmentStatus.Arrived)
                            {
                                <span class="badge bg-success">Arrived</span>
                            }
                            else if (appt.Status == AppointmentStatus.NoShow)
                            {
                                <span class="badge bg-secondary">No-Show</span>
                            }
                            else if (appt.Status == AppointmentStatus.Cancelled)
                            {
                                <span class="badge bg-danger">Cancelled</span>
                            }
                            else if (appt.Status == AppointmentStatus.Completed)
                            {
                                <span class="badge bg-info text-dark">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Scheduled</span>
                            }
                        </td>

                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="MarkArrived" asp-route-id="@appt.Id" class="btn btn-sm btn-outline-success">Arrived</a>
                                <a asp-action="MarkNoShow" asp-route-id="@appt.Id" class="btn btn-sm btn-outline-secondary">No-Show</a>
                                <a asp-action="MarkCancelled" asp-route-id="@appt.Id" class="btn btn-sm btn-outline-danger">Cancel</a>
                                <a asp-action="Reschedule" asp-route-id="@appt.Id" class="btn btn-sm btn-outline-primary">Reschedule</a>
                            </div>
                        </td>

                        <td class="payment-cell">
                            <a asp-action="CreateCheckoutSession"
                               asp-controller="Payment"
                               asp-route-appointmentId="@appt.Id"
                               class="btn btn-sm btn-info">
                                💳 Pay Online
                            </a>
                            <br />

                            @if (appt.Payment != null)
                            {
                                <span class="badge bg-success mt-1">Paid</span>
                        
                                <br />
                                <small>$@appt.Payment.Amount</small>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark mt-2">Not Paid</span>
                            }
                        </td>

                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@appt.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@appt.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
