@model ClinicManagement.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="container mt-4 col-md-6">

    <h3 class="text-danger">Delete Appointment</h3>
    <p>Are you sure you want to delete this appointment?</p>

    <table class="table table-bordered">
        <tr>
            <th>Patient</th>
            <td>@Model.Patient?.Name</td>
        </tr>
        <tr>
            <th>Doctor</th>
            <td>@Model.Doctor?.Email</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>@Model.Date.ToString("dd/MM/yyyy HH:mm")</td>
        </tr>
        <tr>
            <th>Notes</th>
            <td>@(String.IsNullOrEmpty(Model.Notes) ? "-" : Model.Notes)</td>
        </tr>
    </table>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
