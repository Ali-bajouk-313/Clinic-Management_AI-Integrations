@model ClinicManagement.Models.RoleVM

@{
    ViewData["Title"] = "Create Role";
}

<div class="container mt-4">
    <h2 class="mb-3">Create New Role</h2>
    <hr />

    <div class="row">
        <div class="col-md-5">
            <form asp-action="Create" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Role Name</label>
                    <input asp-for="Name" class="form-control" placeholder="e.g. Admin, Doctor, User" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Create Role
                </button>

                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
