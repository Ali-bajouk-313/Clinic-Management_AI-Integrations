@model IEnumerable<ClinicManagement.Models.RoleVM>

@{
    ViewData["Title"] = "Roles Management";
}

<style>
    .roles-title {
        font-size: 28px;
        font-weight: 700;
        color: #1c5ca8;
    }

    .roles-table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 14px rgba(0,0,0,0.07);
    }

        .roles-table thead th {
            background-color: #0f4572 !important;
            color: #fff;
            text-align: center;
        }

        .roles-table tbody tr:hover {
            background-color: #eaf2ff !important;
        }

    .badge-role-name {
        background-color: #e6ecf3;
        padding: 6px 12px;
        border-radius: 6px;
        font-weight: 500;
    }

    .btn {
        border-radius: 6px;
    }

</style>

<div class="container mt-4">
    <h2 class="roles-title mb-3">🔐 Role Management</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-muted mb-0">Manage system permission levels.</p>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle"></i> Add New Role
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No roles found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover roles-table">
                <thead>
                    <tr>
                        <th>Role Name</th>
                        <th width="220px">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>
                                <span >@role.Name</span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-outline-warning btn-sm me-1">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@role.Id" class="btn btn-outline-info btn-sm me-1">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
