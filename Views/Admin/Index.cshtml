@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    .admin-title {
        font-size: 35px;
        font-weight: 700;
        color: #1f5fa8;
    }

    .admin-subtitle {
        font-size: 18px;
        color: #6c757d;
    }

    .admin-card {
        transition: all 0.2s ease-in-out;
        border-radius: 12px;
        border: none;
        background: #ffffff;
    }

        .admin-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 8px 20px rgba(0,0,0,0.12);
        }

    .card-title {
        font-size: 20px;
        font-weight: 600;
        color: #194f8c;
    }

    .admin-section {
        background: #f4f8ff;
        padding: 35px;
        border-radius: 12px;
    }
</style>

<div class="container mt-4">

    <div class="admin-section text-center mb-4">
        <div class="admin-title">Admin Dashboard</div>
        <div class="admin-subtitle">
            Manage roles, permissions, users, and system configurations.
        </div>
    </div>

    <div class="row justify-content-center mt-4">

        <!-- Add Roles -->
        <div class="col-md-4 mb-4">
            <div class="card admin-card shadow-sm h-100">
                <div class="card-body text-center">
                    <h4 class="card-title">➕ Add Roles</h4>
                    <p class="text-muted">Create new system roles.</p>
                    <a href="/Role/Index" class="btn btn-primary px-4">Add Role</a>
                </div>
            </div>
        </div>

        <!-- Assign Roles -->
        <div class="col-md-4 mb-4">
            <div class="card admin-card shadow-sm h-100">
                <div class="card-body text-center">
                    <h4 class="card-title">👤 Assign Roles</h4>
                    <p class="text-muted">Assign roles to registered users.</p>
                    <a href="/AssignRole/Index" class="btn btn-success px-4">Assign Roles</a>
                </div>
            </div>
        </div>

        <!-- Manage Users -->
        <div class="col-md-4 mb-4">
            <div class="card admin-card shadow-sm h-100">
                <div class="card-body text-center">
                    <h4 class="card-title">🧑‍💼 Manage Users</h4>
                    <p class="text-muted">View and manage system users.</p>
                    <a href="/Admin/ManageUsers" class="btn btn-warning px-4">Manage</a>
                </div>
            </div>
        </div>

        <!-- Patients by Doctor -->
        <div class="col-md-4 mb-4">
            <div class="card admin-card shadow-sm h-100">
                <div class="card-body text-center">
                    <h4 class="card-title">🩺 Patients by Doctor</h4>
                    <p class="text-muted">View patients grouped by assigned doctor.</p>
                    <a href="/Admin/PatientsByDoctor" class="btn btn-info px-4">View</a>
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="col-md-4 mb-4">
            <div class="card admin-card shadow-sm h-100">
                <div class="card-body text-center">
                    <h4 class="card-title">📊 Statistics</h4>
                    <p class="text-muted">View system usage & analytics.</p>
                    <a href="/Admin/Statistics" class="btn btn-dark px-4">View Stats</a>
                </div>
            </div>
        </div>

    </div>

</div>
