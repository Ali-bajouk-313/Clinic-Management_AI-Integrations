@model ClinicManagement.Models.AdminStatsVM

@{
    ViewData["Title"] = "System Statistics";
}

<style>
    .stats-title {
        font-size: 30px;
        font-weight: 700;
        color: #1d5ba6;
    }

    .stat-card {
        border: none;
        border-radius: 12px;
        background: linear-gradient(135deg, #f8faff 0%, #e7eef8 100%);
        transition: .25s ease;
    }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0px 8px 20px rgba(0,0,0,0.12);
        }

    .stat-number {
        font-size: 38px;
        font-weight: 700;
        color: #0f4c81;
    }

    .stat-label {
        text-transform: uppercase;
        font-size: 14px;
        font-weight: 600;
        letter-spacing: .5px;
    }

    .chart-table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 14px rgba(0,0,0,0.08);
    }

        .chart-table thead th {
            background: #0f4572 !important;
            color: white;
            text-align: center;
        }

        .chart-table tbody tr:hover {
            background: #e8f1ff;
        }
</style>

<div class="container mt-4">

    <h2 class="stats-title mb-4">📊 System Statistics & Metrics</h2>

    <!-- STAT CARDS -->
    <div class="row">

        <div class="col-md-3 mb-4">
            <div class="card stat-card shadow-sm">
                <div class="card-body text-center">
                    <span class="stat-label text-primary">Total Users</span>
                    <div class="stat-number">@Model.TotalUsers</div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card stat-card shadow-sm">
                <div class="card-body text-center">
                    <span class="stat-label text-success">Total Doctors</span>
                    <div class="stat-number">@Model.TotalDoctors</div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card stat-card shadow-sm">
                <div class="card-body text-center">
                    <span class="stat-label text-warning">Total Patients</span>
                    <div class="stat-number">@Model.TotalPatients</div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card stat-card shadow-sm">
                <div class="card-body text-center">
                    <span class="stat-label text-danger">Total Appointments</span>
                    <div class="stat-number">@Model.TotalAppointments</div>
                </div>
            </div>
        </div>

    </div>

    <hr />

    <h3 class="mt-4 text-secondary">📅 Patients Per Month</h3>

    @if (Model.PatientsPerMonth.Count == 0)
    {
        <div class="alert alert-info mt-3">
            Not enough data to generate monthly statistics.
        </div>
    }
    else
    {
        <div class="row mt-3">
            <div class="col-md-6">
                <canvas id="patientsChart" height="150"></canvas>
            </div>

            <div class="table-responsive col-md-6">
                <table class="table table-bordered chart-table mt-2">
                    <thead>
                        <tr>
                            <th>Month</th>
                            <th>Patients</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PatientsPerMonth)
                        {
                            <tr>
                                <td>@item.Key</td>
                                <td>@item.Value</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    var monthLabels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.PatientsPerMonth.Keys));
    var monthValues = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.PatientsPerMonth.Values));

    var ctx = document.getElementById('patientsChart').getContext('2d');

    var barChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: monthLabels,
            datasets: [{
                label: 'Patients Per Month',
                data: monthValues,
                backgroundColor: '#0f4c81',
                borderRadius: 8
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: { stepSize: 1 }
                }
            }
        }
    });
</script>
